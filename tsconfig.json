{
	"compilerOptions": {
	  "target": "ES2022",
	  "module": "commonjs",
	  "moduleResolution":"node",
	  "lib": [
      "DOM",
      "ES2022"
    ],
	  "sourceMap": true,
	  "rootDir": "src",
	  "outDir": "dist",
	  "resolveJsonModule": true,
	  "strict": true,
	  "esModuleInterop": true,
	  "forceConsistentCasingInFileNames": true,
	  "allowSyntheticDefaultImports": true,
	  "declaration": true,
	},
	"include": [
	  "src",
	  "homebridge-ui",
	],
	"exclude": [
		"**/*.spec.ts"
	 ]
 }